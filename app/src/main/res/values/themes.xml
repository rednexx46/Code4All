<resources>
    <!-- Tema Base da Aplicação -->
    <style name="Theme.Code4All" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Cores Principais -->
        <item name="android:colorPrimary">@color/corPrimaria</item>
        <item name="android:colorPrimaryDark">@color/corPrimariaEscura</item>
        <item name="android:colorAccent">@color/corDiferente</item>
        <!-- Customizar o Tema Aqui. -->
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="Theme.Code4All.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="configuracoes_navigation_view" parent="Widget.Design.NavigationView">
        <item name="fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        //you can give your color here. that will change all divider color in your app.
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/corPrimaria</item>

        <item name="android:padding">8dp</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/corPrimaria</item>

    </style>

    <style name="dialog_carregamento" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogSpotColor">@color/corPrimaria</item>
        <item name="DialogSpotCount">5</item>
    </style>

</resources>