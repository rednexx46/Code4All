<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        tools:context="com.josexavier.code4all.activity.OfertaActivity">

        <TextView
            android:id="@+id/textViewTituloOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="@string/oferta_do_a"
            android:textAlignment="center"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textViewNomeOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="@string/carregando"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageViewOferta"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/retangulo_laranja"
            android:padding="16dp"
            android:src="@drawable/ic_imagem" />

        <EditText
            android:id="@+id/editTextTituloOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borda_preta"
            android:enabled="false"
            android:hint="@string/titulo"
            android:inputType="text"
            android:padding="16dp" />

        <EditText
            android:id="@+id/editTextDescricaoOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borda_preta"
            android:enabled="false"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/descricao_hint"
            android:inputType="text"
            android:padding="16dp" />

        <EditText
            android:id="@+id/editTextMensagemOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/borda_preta"
            android:enabled="false"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/mensagem"
            android:inputType="textMultiLine"
            android:padding="16dp" />

        <LinearLayout
            android:id="@+id/linearLayoutEstadoOferta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/imageButtonAceitarOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/retangulo_verde"
                android:padding="16dp"
                android:src="@drawable/ic_verificacao" />

            <ImageButton
                android:id="@+id/imageButtonRecusarOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/retangulo_vermelho"
                android:padding="16dp"
                android:src="@drawable/ic_x" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>