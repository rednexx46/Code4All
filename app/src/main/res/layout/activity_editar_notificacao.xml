<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.josexavier.code4all.activity.EditarNotificacaoActivity">

        <TextView
            android:id="@+id/textViewTituloEditarNotificacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="@string/editar"
            android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/textViewSubTituloEditarNotificacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewSubTituloEditarNotificacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="@string/notificacao"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/imageViewEditarNotificacao"
            app:layout_constraintEnd_toEndOf="@+id/textViewTituloEditarNotificacao"
            app:layout_constraintStart_toStartOf="@+id/textViewTituloEditarNotificacao"
            app:layout_constraintTop_toBottomOf="@+id/textViewTituloEditarNotificacao" />

        <ImageView
            android:id="@+id/imageViewEditarNotificacao"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/retangulo_laranja"
            android:padding="10dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTituloEditarNotificacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewSubTituloEditarNotificacao"
            app:srcCompat="@drawable/ic_imagem" />

        <EditText
            android:id="@+id/editTextTituloEditarNotificacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/borda_preta"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="text"
            android:padding="16dp"
            android:text="@string/titulo"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextDescricaoEditarNotificacao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEditarNotificacao" />

        <EditText
            android:id="@+id/editTextDescricaoEditarNotificacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/borda_preta"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:text="@string/descricao_hint"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonEditarNotificacao"
            app:layout_constraintEnd_toEndOf="@+id/editTextTituloEditarNotificacao"
            app:layout_constraintStart_toStartOf="@+id/editTextTituloEditarNotificacao"
            app:layout_constraintTop_toBottomOf="@+id/editTextTituloEditarNotificacao" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonEditarNotificacao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/retangulo_laranja"
            android:fontFamily="@font/montserrat_extra_bold"
            android:padding="16dp"
            android:text="@string/confirmar_edicao"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextDescricaoEditarNotificacao" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>