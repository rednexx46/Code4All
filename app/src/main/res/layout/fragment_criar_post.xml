<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.josexavier.code4all.fragment.CriarPostFragment">


        <TextView
            android:id="@+id/textCriarPostAdminTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="@string/criar"
            android:textSize="36sp"
            app:layout_constraintBottom_toTopOf="@+id/textCriarPostAdminSubTitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textCriarPostAdminSubTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_extra_bold"
            android:text="@string/post"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            app:layout_constraintBottom_toTopOf="@+id/imageCriarPostAdminImagem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCriarPostAdminTitulo" />


        <ImageView
            android:id="@+id/imageCriarPostAdminImagem"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/retangulo_laranja"
            android:padding="16dp"
            android:src="@drawable/ic_imagem"
            app:layout_constraintBottom_toTopOf="@+id/imageCriarPostAdminGaleria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCriarPostAdminSubTitulo"
            app:srcCompat="@drawable/ic_imagem" />

        <ImageButton
            android:id="@+id/imageCriarPostAdminGaleria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/retangulo_laranja"
            android:padding="10dp"
            android:src="@drawable/ic_imagem"
            app:layout_constraintBottom_toTopOf="@+id/editTextCriarPostAdminTitulo"
            app:layout_constraintEnd_toEndOf="@+id/imageCriarPostAdminImagem"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/imageCriarPostAdminImagem"
            app:layout_constraintTop_toBottomOf="@+id/imageCriarPostAdminImagem" />

        <EditText
            android:id="@+id/editTextCriarPostAdminTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/borda_preta"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/titulo"
            android:inputType="text"
            android:padding="16dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/editTextCriarPostAdminDescricao"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageCriarPostAdminGaleria" />

        <EditText
            android:id="@+id/editTextCriarPostAdminDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/borda_preta"
            android:ems="10"
            android:fontFamily="@font/montserrat_medium"
            android:hint="@string/descricao"
            android:inputType="textMultiLine"
            android:padding="16dp"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/spinnerCriarPostAdminTags"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextCriarPostAdminTitulo" />

        <Spinner
            android:id="@+id/spinnerCriarPostAdminTags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/borda_preta"
            android:padding="10dp"
            android:spinnerMode="dialog"
            app:layout_constraintBottom_toTopOf="@+id/buttonCriarPostAdmin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextCriarPostAdminDescricao" />

        <TextView
            android:id="@+id/textViewAvisoCriarPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aviso"
            android:textAlignment="center"
            android:textColor="@color/corPrimaria"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textViewSloganCriarPost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCriarPostAdmin" />

        <TextView
            android:id="@+id/textViewSloganCriarPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="@string/aviso_post"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAvisoCriarPost" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCriarPostAdmin"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/retangulo_laranja"
            android:padding="16dp"
            android:text="@string/opcao_criar_post"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/textViewAvisoCriarPost"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCriarPostAdminTags" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>